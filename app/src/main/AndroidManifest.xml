<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="castofo_nower.com.co.nower">

  <permission
    android:name="castofo_nower.com.co.nower.permission.MAPS_RECEIVE"
    android:protectionLevel="signature"/>

  <uses-permission
    android:name="castofo_nower.com.co.nower.permission.MAPS_RECEIVE"/>

  <uses-feature
    android:glEsVersion="0x00020000"
    android:required="true"/>

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission android:name="android.permission.VIBRATE"/>

  <!--
   To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user.
   This disconnect option is required to comply with the Google+ Sign-In developer policies
  -->
  <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
  <!-- To retrieve the account name (email) as part of sign-in: -->
  <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
  <!-- To auto-complete the email text field in the login form with the user's emails -->
  <uses-permission android:name="android.permission.READ_PROFILE"/>
  <uses-permission android:name="android.permission.READ_CONTACTS"/>

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name=".controllers.SplashActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".controllers.NowerMap"
      android:label="@string/title_activity_map"
      android:configChanges="orientation|screenSize">
    </activity>

    <meta-data
      android:name="com.google.android.maps.v2.API_KEY"
      android:value="AIzaSyAYqjc0sDA7WH8tKwzjEgZa9z6CtRbGaxM"/>
      <!--android:value="AIzaSyComkf567bF-nIKsmhbqOtejwJdR8x4cmE" />-->


    <meta-data
      android:name="com.google.android.gms.version"
      android:value="@integer/google_play_services_version"/>

    <activity
      android:name=".controllers.PromoCardsAnimator"
      android:label="@string/promo"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name=".controllers.UserPromosList"
      android:label="@string/title_activity_user_promo_list"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name=".controllers.BranchesList"
      android:label="@string/title_activity_branches_list"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name=".controllers.TabsHandler"
      android:label="@string/app_name"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name=".controllers.Login"
      android:label="@string/log_in"
      android:theme="@style/AppTheme.NoActionBar"
      android:windowSoftInputMode="adjustResize|stateHidden"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name=".controllers.Register"
      android:label="@string/register"
      android:theme="@style/AppTheme.CustomWhiteRadioButton"
      android:windowSoftInputMode="adjustResize|stateHidden"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name=".controllers.PromoPictureViewer"
      android:label="@string/title_activity_promo_picture_viewer">
    </activity>
  </application>

</manifest>
