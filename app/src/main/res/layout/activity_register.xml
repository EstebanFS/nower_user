<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="castofo_nower.com.co.nower.controllers.Register"
            android:fillViewport="true"
            android:background="@drawable/login_background">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/register_header"
      android:text="@string/app_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="70dp"
      android:textSize="50sp"
      android:textStyle="bold"
      android:textColor="@color/white"/>

    <EditText
      android:id="@+id/name"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:inputType="textPersonName"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:paddingLeft="10dp"
      android:hint="@string/full_name"
      android:textColor="@color/white"
      android:textColorHint="@color/dark_white"
      android:background="@drawable/login_field_background"
      android:drawableLeft="@drawable/ic_user_light"
      android:drawablePadding="20dp"
      android:singleLine="true"/>

    <EditText
      android:id="@+id/email"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:inputType="textEmailAddress"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:paddingLeft="10dp"
      android:hint="@string/email"
      android:textColor="@color/white"
      android:textColorHint="@color/dark_white"
      android:background="@drawable/login_field_background"
      android:drawableLeft="@drawable/ic_email_light"
      android:drawablePadding="20dp"
      android:singleLine="true"/>

    <EditText
      android:id="@+id/password"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:inputType="textPassword"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:paddingLeft="10dp"
      android:hint="@string/password"
      android:textColor="@color/white"
      android:textColorHint="@color/dark_white"
      android:background="@drawable/login_field_background"
      android:drawableLeft="@drawable/ic_password_light"
      android:drawablePadding="20dp"
      android:singleLine="true"/>

    <EditText
      android:id="@+id/password_confirmation"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:inputType="textPassword"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:paddingLeft="10dp"
      android:hint="@string/password_confirmation"
      android:textColor="@color/white"
      android:textColorHint="@color/dark_white"
      android:background="@drawable/login_field_background"
      android:drawableLeft="@drawable/ic_password_light"
      android:drawablePadding="20dp"
      android:singleLine="true"/>

    <EditText
      android:id="@+id/birthday"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:paddingLeft="10dp"
      android:background="@drawable/login_field_background"
      android:drawableLeft="@drawable/ic_gift_light"
      android:drawablePadding="20dp"
      android:singleLine="true"
      android:hint="@string/birthday_date"
      android:textColor="@color/white"
      android:textColorHint="@color/dark_white"
      android:gravity="center_vertical"
      android:onClick="showDatePickerDialog"
      android:clickable="true"
      android:editable="false"/>

    <RadioGroup
      android:id="@+id/gender"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:orientation="horizontal"
      android:gravity="center">

      <RadioButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="@string/female"/>

      <RadioButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="@string/male" />
    </RadioGroup>

    <Button
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="@string/register"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="30dp"
      android:textColor="@color/dark_white"
      android:textStyle="bold"
      android:background="@drawable/green_button_background"
      android:onClick="onRegisterClicked"/>

    <TextView
      android:text="@string/already_have_account"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      android:layout_marginTop="20dp"
      android:padding="25dp"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="15sp"
      android:gravity="center"
      android:onClick="onAlreadyHaveAccountClicked"
      android:clickable="true"/>
  </LinearLayout>
</ScrollView>
